@import 'fonts'

body
  font-family: 'IBM Plex Mono', monospace
  background: #cad9ac75
  color: #222222

.font-sans
  font-family: 'IBM Plex Sans', sans-serif

main > .page
  margin: 0 auto 0 20em
  width: 75%

.navbar
  cursor: default
  height: 100vh
  left: 0
  overflow-x: hidden
  overflow-y: auto
  position: fixed
  text-align: center
  top: 0
  width: 20em
  z-index: 10000
  background: none

.content
  min-height: 100vh
  display: flex
  flex-direction: column
  justify-content: center
  align-content: center

.content div
  width: 80%
  font-size: 1.25rem
  line-height: 1.75rem
  margin-top: 0.875rem

.content div p
  margin-top: 0.75rem
  margin-bottom: 0.75rem

.title
  font-size: 3rem
  line-height: 1
  font-weight: 700
  color: #222222
  margin-bottom: 0.5rem

.subtitle
  font-size: 1.5rem; /* 24px */
  line-height: 2rem; /* 32px */
  font-weight: 600
  color: #222222
  opacity: 0.75
  margin-bottom: 0.75rem

.link-group
  height: 100%
  display: flex
  flex-direction: column
  justify-content: center
  align-content: center

.link-group > :not(.logo)
  margin: 0.5em 0

.inline-link
  font-size: 20px
  color: #c33200

.inline-link:hover
  color: #034923
  text-decoration: underline
  text-decoration-thickness: 2px

.navbar-link
  font-size: 22px
  color: #c33200
  margin: 1em auto
  text-decoration: none

.navbar-link:hover
  color: #034923
  text-decoration: underline
  text-decoration-thickness: 2px

.navbar-link__active
  text-decoration: underline
  text-decoration-thickness: 2px

@media (max-width: 1024px)
  main > .page
    padding-top: 4em
    margin: 0 auto

  .content
    margin-top: 2em
    min-height: auto
    align-content: center

  .navbar-link
    font-size: 18px

  .navbar
    height: 4em
    left: 0
    line-height: 3.5em
    overflow: hidden
    padding: 0
    top: 0
    width: 100%

  .link-group
    display: flex
    flex-direction: row
    justify-content: center
    align-content: center

  .link-group > div
    margin: 0 1em !important
    align-self: flex-end

  .logo
    margin-bottom: 0

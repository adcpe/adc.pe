---
pagination:
  data: posts
  size: 1
  alias: post
  addAllPagesToCollections: true
tags: posts
permalink: "/blog/{{ post.id }}-{{ post.data.slug }}/"
templateEngineOverride: md, pug
eleventyComputed:
  id: "{{ post.id }}"
  content: "{{ post.content }}"
  title: "{{ post.data.title }}"
  slug: "{{ post.data.slug }}"
  date: "{{ post.data.date }}"
---
extends _includes/base.pug

block scripts
  link(rel="stylesheet", href=`../../assets/css/main.css`)

block content
  h1= post.data.title
  h2= post.data.date
  div= post.content
